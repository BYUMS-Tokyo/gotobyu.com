{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next",
      },
    ],
    "strictNullChecks": true,
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    ".next/types/**/*.ts",
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "src/**/*": "esm",
    },
    "compilerOptions": {
      "jsx": "react-jsx",
    },
  },
}
