{
  "extends": "./tsconfig.base.json",
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx"
  ],
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "src/**/*": "esm"
    },
    "compilerOptions": {
      "jsx": "react-jsx"
    }
  }
}
