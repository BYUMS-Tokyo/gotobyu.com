{
  "commitMessagePrefix": "chore:",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Asia/Tokyo",
  "postUpdateOptions": ["yarnDedupeHighest"],
  "packageRules": [
    {
      "packageNames": ["node"],
      "enabled": false
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "matchLanguages": ["js"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "next",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["next"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "jest",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["jest"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "storybook",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["storybook"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "eslint",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["eslint"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "stylelint",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["stylelint"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "commitlint",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["commitlint"]
    }
  ]
}
