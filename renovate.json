{
  "commitMessagePrefix": "chore:",
  "labels": ["dependencies"],
  "rangeStrategy": "bump",
  "rebaseWhen": "behind-base-branch",
  "timezone": "Asia/Tokyo",
  "packageRules": [
    {
      "automerge": true,
      "automergeType": "branch",
      "matchLanguages": ["js"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "eslint",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["eslint"]
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "groupName": "storybook",
      "matchLanguages": ["js"],
      "matchPackagePatterns": ["storybook"]
    }
  ]
}
